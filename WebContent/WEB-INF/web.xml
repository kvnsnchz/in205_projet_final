<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LibraryManager</display-name>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/View/error_500.jsp</location>
  </error-page>
  <servlet>
    <!-- Le nom de votre Servlet -->
    <servlet-name>DashboardServlet</servlet-name>
    <!-- le chemin de votre Servlet dans votre application -->
    <servlet-class>com.excilys.librarymanager.servlet.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <!-- Référence au nom de la Servlet -->
    <servlet-name>DashboardServlet</servlet-name>
    <!-- URL à partir de laquelle votre Servlet sera accessible -->
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
  <servlet>
    <!-- Le nom de votre Servlet -->
    <servlet-name>EmpruntAddServlet</servlet-name>
    <!-- le chemin de votre Servlet dans votre application -->
    <servlet-class>com.excilys.librarymanager.servlet.EmpruntAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <!-- Référence au nom de la Servlet -->
    <servlet-name>EmpruntAddServlet</servlet-name>
    <!-- URL à partir de laquelle votre Servlet sera accessible -->
    <url-pattern>/emprunt_add</url-pattern>
  </servlet-mapping>
</web-app>